--// Example of Professional UI Library
local Library = {}
Library.__index = Library

local TweenService = game:GetService("TweenService")

function Library:CreateWindow(config)
    local Window = {}
    Window.Title = config.Title or "My UI"
    Window.Size = config.Size or UDim2.new(0, 500, 0, 350)

    -- Main ScreenGui
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "CustomUILib"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.Parent = game:GetService("CoreGui")

    -- Main Frame
    local Main = Instance.new("Frame")
    Main.Name = "Main"
    Main.Size = Window.Size
    Main.Position = UDim2.new(0.5, -Window.Size.X.Offset/2, 0.5, -Window.Size.Y.Offset/2)
    Main.BackgroundColor3 = Color3.fromRGB(30, 10, 60)
    Main.BorderSizePixel = 0
    Main.Active = true
    Main.Draggable = true
    Main.Parent = ScreenGui

    -- Title Bar
    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0, 30)
    Title.BackgroundColor3 = Color3.fromRGB(50, 20, 100)
    Title.Text = Window.Title
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 16
    Title.TextColor3 = Color3.fromRGB(255,255,255)
    Title.Parent = Main

    -- Tabs Holder
    local Tabs = Instance.new("Frame")
    Tabs.Size = UDim2.new(0, 120, 1, -30)
    Tabs.Position = UDim2.new(0, 0, 0, 30)
    Tabs.BackgroundColor3 = Color3.fromRGB(40, 15, 80)
    Tabs.Parent = Main

    local TabButtons = Instance.new("UIListLayout")
    TabButtons.FillDirection = Enum.FillDirection.Vertical
    TabButtons.Padding = UDim.new(0, 6)
    TabButtons.Parent = Tabs

    -- Content Holder
    local Content = Instance.new("Frame")
    Content.Size = UDim2.new(1, -120, 1, -30)
    Content.Position = UDim2.new(0, 120, 0, 30)
    Content.BackgroundColor3 = Color3.fromRGB(20, 5, 40)
    Content.Parent = Main

    Window.Main = Main
    Window.Tabs = Tabs
    Window.Content = Content

    return setmetatable(Window, Library)
end

function Library:CreateTab(name)
    local Tab = {}

    local Button = Instance.new("TextButton")
    Button.Text = name
    Button.Size = UDim2.new(1, -10, 0, 28)
    Button.BackgroundColor3 = Color3.fromRGB(80, 30, 130)
    Button.TextColor3 = Color3.new(1,1,1)
    Button.Parent = self.Tabs

    local Page = Instance.new("Frame")
    Page.Size = UDim2.new(1, 0, 1, 0)
    Page.BackgroundTransparency = 1
    Page.Visible = false
    Page.Parent = self.Content

    Button.MouseButton1Click:Connect(function()
        for _,child in ipairs(self.Content:GetChildren()) do
            if child:IsA("Frame") then child.Visible = false end
        end
        Page.Visible = true
    end)

    Tab.Page = Page
    return Tab
end

return Library
